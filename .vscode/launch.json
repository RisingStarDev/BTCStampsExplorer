{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Dev (Debug)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--inspect-wait",
        "--watch=static/,routes/,components/,islands/",
        "./main.ts"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229,
      "env": {
        "PATH": "${env:HOME}/.deno/bin:${env:PATH}"
      },
      "preLaunchTask": "deno-build"
    }
  ]
}
