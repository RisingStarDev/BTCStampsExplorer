{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Dev (Debug)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "-A",
        "--inspect-wait",
        "--watch=static/,routes/,components/,islands/,server/",
        "./dev.ts"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229,
      "restart": false,
      "autoAttachChildProcesses": true,
      "preLaunchTask": "pre-launch-tasks",
      "postDebugTask": "restart-debug",
      "env": {
        "PATH": "${env:HOME}/.deno/bin:${env:PATH}",
        "DENO_ENV": "development"
      }
    }
  ]
}
